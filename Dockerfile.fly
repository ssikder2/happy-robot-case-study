FROM python:3.11-slim

WORKDIR /app

# Install dependencies
RUN pip install fastapi uvicorn python-dotenv jinja2

# Copy application and static files
COPY src/main.py ./main.py
COPY src/models.py ./models.py
COPY src/config.py ./config.py
COPY src/dashboard.py ./dashboard.py
COPY static ./static
COPY templates ./templates

# Expose port
EXPOSE 8000

# Run the application
CMD ["uvicorn", "main:app", "--host", "0.0.0.0", "--port", "8000"]
